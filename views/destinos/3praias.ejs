<div class="container text-center mt-5">
  <h1>3 Praias</h1>

<!-- Cards -->
<div class="container mt-5">
  <div class="row">

    <!-- Card Simples -->
    <div class="col-sm-4 mb-4">
      <div class="card h-100 border-0">
        <img src="/img/jeri.jpg" class="card-img-top" alt="Jericoacoara">
        <div class="card-body">
          <h5 class="card-title">Pacote Simples</h5>
          <p class="card-text">Aproveite as praias Morro Branco, Praia das Fontes e Canoa Quebrada.</p>
          <span class="btn btn-dark">R$ 80,00</span>
        </div>
      </div>
    </div>

    <!-- Card Casal -->
    <div class="col-sm-4 mb-4">
      <div class="card h-100 border-0">
        <img src="/img/3praias.jpg" class="card-img-top" alt="3 Praias">
        <div class="card-body">
          <h5 class="card-title">Pacote Casal</h5>
          <p class="card-text">Morro Branco, Praia das Fontes e Canoa Quebrada. (Incluso Buggy + não sei)</p>
          <span class="btn btn-dark">R$ 150,00</span>
        </div>
      </div>
    </div>

    <!-- Card Estrela -->
    <div class="col-sm-4 mb-4">
      <div class="card h-100 border-0">
        <img src="/img/cumbuco.jpg" class="card-img-top" alt="Outras Praias">
        <div class="card-body">
          <h5 class="card-title">Pacote Estrela</h5>
          <p class="card-text">Viva a experiência de passeios incríveis + hospedagem.</p>
          <span class="btn btn-dark">R$ 240,00</span>
        </div>
      </div>
    </div>

  </div>
</div>



  <div class="row justify-content-center mt-4">

    <!-- Card do formulário de avaliação menor -->
    <div class="col-md-3 mb-4"> <!-- menor largura -->
      <div class="card border-0"> <!-- card padrão sem altura fixa -->
        <div class="card-body d-flex flex-column p-3">
          <form action="/3praias/avaliar" method="POST" class="d-flex flex-column">
            <div class="mb-3 text-start">
              <label for="comentario" class="form-label">Comentário</label>
              <textarea
                name="comentario"
                id="comentario"
                class="form-control"
                rows="3"
                placeholder="Deixe seu comentário"
                required
              ></textarea>
            </div>

            <div class="mb-3 text-start">
              <label class="form-label d-block mb-1">Avalie:</label>
              <div class="stars">
                <% for (let i = 5; i >= 1; i--) { %>
                  <input type="radio" id="star-<%= i %>" name="nota" value="<%= i %>" required />
                  <label for="star-<%= i %>">&#9733;</label>
                <% } %>
              </div>
            </div>

            <button type="submit" class="btn btn-dark mt-auto align-self-start">Enviar</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Card das avaliações postadas (mantido igual) -->
    <div class="col-md-6 mb-4">
      <div class="card h-100 border-0 p-3">
        <h5 class="mb-3 text-start">Avaliações Recentes</h5>

        <% if (avaliacoes.length > 0) { %>
          <% avaliacoes.forEach(avaliacao => { %>
            <div class="avaliacao-postada mb-3">
             <p class="mb-1"><strong>Nota:</strong>
  <% for (let i = 1; i <= 5; i++) { %>
    <span class="star <%= i <= avaliacao.nota ? 'checked' : '' %>">&#9733;</span>
  <% } %>
</p>
              <p><strong>Comentário:</strong> <%= avaliacao.comentario %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p>Seja o primeiro a avaliar!</p>
        <% } %>
      </div>
    </div>

  </div>
</div>
